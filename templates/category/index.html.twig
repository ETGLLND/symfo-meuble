{% extends "base.html.twig" %}
{% block title %}
	{{ category.name }}
{% endblock %}

{% block body %}
	<h1>{{ category.name }}</h1>
	<a href="{{ path('edit_category', {'id': category.id}) }}" class="btn btn-success btn-sm ml-1">Modifier</a>
	<a href="{{ path('delete_category', {'id': category.id}) }}" class="btn btn-danger btn-sm ml-1">Supprimer</a>
	<h2 class="mt-3">Cette catégorie comprend les créations suivantes :</h2>
	<ul>
		{% for f in category.furniture %}
			<li>
				<a href="{{ path('furniture', {'id': f.id}) }}" class="btn btn-primary mb-2">{{ f.name }}</a>
			</li>
		{% endfor %}
	</ul>
{% endblock %}
