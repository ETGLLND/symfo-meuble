{% extends "base.html.twig" %}

{% block body %}
    <h1>{{ furniture.name }}</h1>
    <p>Nombre de création : {{ furniture.craftNumber }}</p>
    <h2>Catégorie : {{ furniture.category.name }}</h2>
    <h2>Matériaux</h2>
    <ul>
    {% for material in furniture.material %}
        <li>{{ material.name }}</li>
    {% endfor %}
    </ul>
    <a href="{{ path('furniture_edit', {id: furniture.id}) }}">Editer ce meuble</a>
    <a href="{{ path('furniture_delete', {id: furniture.id}) }}">Supprimer ce meuble</a>
{% endblock %}
